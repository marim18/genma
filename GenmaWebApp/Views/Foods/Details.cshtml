@model GenmaWebApp.Models.FoodModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>FoodModel</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fat)
        </dd>
    </dl>
    
    <h4>FoodTags</h4>
    <table class="table">
        <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                FoodTag
            </th>
        </tr>
        </thead>
        <tbody>
        
        @foreach (var item in Model.FoodTagRelationModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.FoodTag.Id)
                </td>
                <td>
                    @Html.DisplayFor(m => item.FoodTag.Name)
                </td>
            </tr>
        }
        </tbody>

    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>