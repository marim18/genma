@model GenmaWebApp.Models.ViewModels.FoodEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FoodModel</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodModel.Id"/>
            <div class="form-group">
                <label asp-for="FoodModel.Name" class="control-label"></label>
                <input asp-for="FoodModel.Name" class="form-control"/>
                <span asp-validation-for="FoodModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodModel.Fat" class="control-label"></label>
                <input asp-for="FoodModel.Fat" class="form-control"/>
                <span asp-validation-for="FoodModel.Fat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>FoodTags</h4>
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            FoodTag
                        </th>
                        <th style="text-align:center;">
                            Linked
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    
                    @for (var i = 0; i < Model.SelectedTagStates.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => m.SelectedTagStates[i].FoodTagModel.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.SelectedTagStates[i].FoodTagModel.Name)
                            </td>
                            <td style="text-align:center;">
                                @Html.CheckBoxFor(m => m.SelectedTagStates[i].Selected)
                                @Html.HiddenFor(m => m.SelectedTagStates[i].FoodTagModel.Id)
                            </td>

                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>